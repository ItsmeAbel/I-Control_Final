<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.da981108.i_control.MainActivity"
    android:background="@drawable/home_pic"
    tools:showIn="@layout/app_bar_main"
    android:weightSum="1"
    android:orientation="vertical">

    <Button
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@color/colorAccent"
        android:id="@+id/guardians"
        android:onClick="goToguardians"
        android:background="@color/colorPrimary"
        android:layout_alignTop="@+id/task"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/contactus"
        android:onClick="goTocontactus"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/task2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/task2"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:layout_height="200dp"
        app:srcCompat="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:id="@+id/task"
        android:onClick="goToBalance"
        android:layout_width="170dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
